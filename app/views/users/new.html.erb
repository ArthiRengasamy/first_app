<div style="text-align: right"><%= link_to "Read Volunteer success stories",stories_path,class: "btn btn-large btn-primary" %></div>



<!-- DO NOT SHOW THE SIGNUP FORM IF THE USER IS ALREADY LOGGED IN -->

<% if not signed_in? %>


<h3 style="text-align: left"><b>Volunteer sign-up</b></h3>

<div class="row">
  <div class="">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :gender %>
        <%= f.select(:gender, User::GENDER_TYPES) %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :address %>
        <%= f.text_field :address %>

        <%= f.label :area%>
        <%= f.select(:area, User::AREA_TYPES) %>

        <%= f.label :other %>
        <%= f.text_field :other %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation %>
        <div></div>
        <%= f.submit "Volunteer signup", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
<% end %>


