<% provide(:title, current_user.name) %>
<h1 xmlns="http://www.w3.org/1999/html">Hi! <%= current_user.name %></h1>

<p style="text-align: right;font-weight:bold;font-style:italic;font-size:1.5em;color:blue" >
  <% if signed_in? %>
      <% if current_user.stories.any? %>
          <%= link_to "Post another success story", :controller => :stories, :action => :new, :id => current_user.id %>
      <% else %>
          <%= link_to "Post a success story", :controller => :stories, :action => :new, :id => current_user.id %>
      <% end %>
      </br>
      </br>
      </br>
      <%= link_to "Edit my profile", :controller => :users, :action => :edit, :id => current_user.id %>
  <% end %>
</p>

<p id="notice"><%= notice %></p>



<div class="span8">
  <% if current_user.stories.any? %>
      <h2>My success stories (<%= current_user.stories.count %>)</h2>

      <ol class="stories">
            <%= render current_user.stories %>
      </ol>

  <% end %>
</div>



